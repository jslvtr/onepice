<div class="pager">
    <div class="pager-prev">
       {{#if prev}}
        <a href="{{page_url prev}}">
            <span class="pager-prev-arrow">
                <i class="fa fa-angle-left"></i>
            </span>
            <span>Previous</span>
        </a>
       {{else}}
        <a href="javascript:void(0)" class="disabled">
                <span class="pager-prev-arrow">
                    <i class="fa fa-angle-left"></i>
                </span>
                <span>Previous</span>
         </a>
        {{/if}}
    </div>
    <div class="pager-current">
        <a href="">Page {{page}}/{{pages}}</a>
    </div>
    <div class="pager-next">
       {{#if next}}
            <a href="{{page_url next}}">
                <span>Next</span>
                <span class="pager-next-arrow">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        {{else}}
           <a href="javascript:void(0)" class="disabled">
                <span>Next</span>
                <span class="pager-next-arrow">
                    <i class="fa fa-angle-right"></i>
                </span>
            </a>
        {{/if}}
    </div>
</div>
